<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Features</title>
    <link rel="shortcut icon" href="icons/icon1.png" type="image/x-icon">
    <link rel="stylesheet" type="text/css" href="chat.css">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

</head>
<body>
<%- include('header.html') %>
<div class="container">
    <div class="row">

<div class="col-md-4">
<% if (isDoc) { %>
    <%for (var i = 0; i < doctor.clients.length; i++) { %>
        <div>
            <button onclick="openChat(<%=i%>)"><%=doctor.clients[i]%></button>
        </div>
    <% } %>
<% } else { %>
    <%for (var i = 0; i < doctors.length; i++) { %>
        <div>
            <button onclick="openChat(<%=i%>)"><%=doctors[i].name%></button>
        </div>
    <% } %>
<% } %>
</div>

<div class="col-md-8">
<% if (!isDoc) { %>
<%for (var i = 0; i < doctors.length; i++) { %>
    <div class="chatCard" id="card<%=i%>">
    <h1><%=doctors[i].name%></h1>
    <% console.log(texts[i]); if(texts[i] != '-1') { %>
    <% var lines = texts[i].split('\n') %>
    <% for (var j = 0; j < lines.length; j++) { %>
        <% if (lines[j][0] == 'u') { %>
            <!-- USER TEXT -->
            <p class="userText"><%=uname%> : <%=lines[j].substring(1)%></p>
        <% } %>
        <% if (lines[j][0] == 't') { %>
            <!-- TIME TEXT -->
            <p class="timeText"><%=lines[j].substring(1)%></p>
        <% } %>
        <% if (lines[j][0] == 'd') { %>
            <!-- DOCTOR TEXT -->
            <p class="doctorText"><%=doctors[i].name%> : <%=lines[j].substring(1)%></p>
        <% } %>
    <% } %>
    <% } else { %>
        <div>
            <p>Вау, ну ты лох, не написал ещё терапевту!</p>
        </div>
    <% } %>
    <!-- Send message -->
    <form action="/message" method="post">
        <input type="text" name="src">
        <input type="text" name="response" value="<%=doctors[i].uname%>">
        <input type="text" name="uname" value="<%=uname%>">
        <input type="text" name="isFirst" value="<%=(texts[i] == '-1')%>">
        <input type="text" name="isDoc" value="0">
        <button type="submit" class="btn btn-primary"></button>
    </form>
    </div>
<% } %>
<% } else { %>
    <%for (var i = 0; i < users.length; i++) { %>
        <div class="chatCard" id="card<%=i%>">
        <h1><%=users[i].name%></h1>
        <% if(texts[i] != '-1') { %>
            <% var lines = texts[i].split('\n') %>
            <% for (var j = 0; j < lines.length; j++) { %>
                <% if (lines[j][0] == 'u') { %>
                <!-- USER TEXT -->
                <p class="userText"><%=users[i]%> : <%=lines[j].substring(1)%></p>
                <% } %>
                <% if (lines[j][0] == 't') { %>
                <!-- TIME TEXT -->
                <p class="timeText"><%=lines[j].substring(1)%></p>
                <% } %>
                <% if (lines[j][0] == 'd') { %>
                <!-- DOCTOR TEXT -->
                <p class="doctorText"><%=uname%> : <%=lines[j].substring(1)%></p>
                <% } %>
            <% } %>
            <!-- Send message -->
            <form action="/message" method="post">
                <input type="text" name="src">
                <input type="text" name="response" value="<%=users[i]%>" hidden>
                <input type="text" name="uname" value="<%=uname%>" hidden>
                <input type="text" name="isDoc" value="1">
                <button type="submit" class="btn btn-primary"></button>
            </form>
            </div>
        <% } %>
    <% } %>
<% } %>
</div>

    </div>
</div>

<script>
var chatSize
<% if (isDoc) { %>
    chatSize = <%=users.length%>
<% } else { %>
    chatSize = <%=doctors.length%>
<% } %>
function openChat(i) {
    for (var j = 0; j < chatSize; j++) {
        let vis
        if (j == i)
            vis = "visible"
        else
            vis = "hidden"
        document.getElementById("card" + j).style.setProperty("visibility", vis)
    }
}
</script>

</body>
</html>
