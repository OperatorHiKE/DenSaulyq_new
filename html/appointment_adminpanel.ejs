<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Appointments</title>

    <link rel="stylesheet" href="style/appointment_adminpanel.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v6.0.0/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

</head>
<body>
<%- include('new_header.html') %>
<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th scope="col">â„–</th>
        <th scope="col"><a href="/appointmentPanel?by=department">Department</a></th>
        <th scope="col"><a href="/appointmentPanel?by=doctor">Doctor</a></th>
        <th scope="col"><a href="/appointmentPanel?by=date">Date</a></th>
        <th scope="col"><a href="/appointmentPanel?by=time">Time</a></th>
        <th scope="col"><a href="/appointmentPanel?by=name">Name</a></th>
        <th scope="col"><a href="/appointmentPanel?by=phone">Phone</a></th>
        <th scope="col"><a href="/appointmentPanel?by=message">Message</a></th>
    </tr>
    </thead>
    <tbody>
    <% for(var i = 0; i < appointments.length; i++) { %>
    <tr>
            <form action="changeAppointment" method="post">
                <th scope="row"><%=i%></th>
                <td><input name="department" value="<%=appointments[i].department%>"></td>
                <td><input name="doctor"      value="<%=appointments[i].doctor%>"></td>
                <td><input name="date"        value="<%=appointments[i].date%>"></td>
                <td><input name="time"        value="<%=appointments[i].time%>"></td>
                <td><input name="name"        value="<%=appointments[i].name%>"></td>
                <td><input name="phone"       value="<%=appointments[i].phone%>"></td>
                <td><input name="message"     value="<%=appointments[i].message%>"></td>
                <td>
                    <input name="id" value="<%=appointments[i]._id%>" hidden>
                    <button class="btn btn-success button_add" type="submit"><i class="fa-regular fa-circle-check"></i></button>
                </td>
                <td>
            </form>
            <form action="deleteAppointment" method="post">
                <input name="id" value="<%=appointments[i]._id%>" hidden>
                <button class="btn btn-danger" type="submit"><i class="fa-regular fa-trash-can"></i></button>
                </td>
            </form>
    </tr>
    <% } %>
    <tr>
        <form action="session" method="post">
            <th scope="row">+</th>
            <td><input name="department" value=""></td>
            <td><input name="doctor"      value=""></td>
            <td><input name="date"        value=""></td>
            <td><input name="time"        value=""></td>
            <td><input name="name"        value=""></td>
            <td><input name="phone"       value=""></td>
            <td><input name="message"     value=""></td>
            <td>
                <input name="fromPanel"     value="true" hidden>
                <button class="btn btn-success button_add" type="submit"><i class="fa-regular fa-circle-check"></i></button>
            </td>
            <td>
        </form>
    </tr>
    </tbody>
</table>
<script src="https://kit.fontawesome.com/520e072e3a.js" crossorigin="anonymous"></script>
</body>
</html>